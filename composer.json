{
    "name": "kduma/pkv",
    "description": "Partial Key Verification Library for PHP",
    "keywords": [
        "kduma",
        "pkv",
        "Partial Key Verification"
    ],
    "homepage": "https://github.com/kduma-OSS/PHP-Partial-Key-Verification",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Krystian Duma",
            "email": "git@krystian.duma.sh",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2 || ^12.0.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "KDuma\\PKV\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KDuma\\PKV\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
